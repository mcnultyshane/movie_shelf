
{{>navigation}}
<div class="container is-fluid">

<h1 class="title is-size-4-mobile is-underlined has-text-left redText">Want to Watch</h1>
      <div class="columns is-mobile is-flex-wrap-wrap is-flex-direction-row"> 
{{#each shelves.[0].movies}}
{{#if on_deck}}
        <div class="column is-one-third-mobile is-one-third-tablet is-2-desktop is-2-widescreen is-1.5-fullhd">
          <article>
            <figure class="image is-200x296">
              <img src="{{poster_path}}" />
            </figure>
            <h2 class="is-size-6-desktop is-size-7-mobile has-text-centered redText is-family-secondary">{{title}}</h2>
          </article>
        </div>
{{/if}}
{{/each}}
      </div>

<h1 class="title is-size-4-mobile is-underlined has-text-left redText">Watched</h1>
      <div class="columns is-mobile is-flex-wrap-wrap is-flex-direction-row"> 
{{#each shelves.[0].movies}}
{{#if watched}}
        <div class="column is-one-third-mobile is-one-third-tablet is-2-desktop is-2-widescreen is-1.5-fullhd">
          <article>
            <figure class="image is-200x296">
              <img src="{{poster_path}}" />
            </figure>
            <p class="is-size-6-desktop is-size-7-mobile has-text-centered redText is-family-secondary">{{title}}</>
          </article>
        </div>
{{/if}}
{{/each}}
      </div>
</div>
